<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ContatosAdapter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="card_view">
        <item name="cardBackgroundColor">#5F86A4</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">6dp</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="card_tittle">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="card_email">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>

    </style>

    <style name="card_id">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_gravity">end</item>

    </style>

    <style name="card_phone">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="app_tittle">
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.ContatosAdapter" parent="Base.Theme.ContatosAdapter" />
</resources>